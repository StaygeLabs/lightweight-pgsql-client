{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "label": "npm: build",
      "detail": "Build the extension",
      "problemMatcher": "$tsc"
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": "build",
      "label": "npm: watch",
      "detail": "Watch for changes and rebuild",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*$",
          "endsPattern": "^.*Done in \\d+ms$"
        }
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "test",
      "label": "npm: lint",
      "detail": "Run ESLint",
      "problemMatcher": "$eslint-stylish"
    },
    {
      "type": "npm",
      "script": "package",
      "group": "build",
      "label": "npm: package",
      "detail": "Package extension to VSIX"
    }
  ]
}
